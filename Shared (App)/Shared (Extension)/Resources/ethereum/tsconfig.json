{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "emitDeclarationOnly": false,
        "sourceMap": false,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "*": [
                "*",
                "events/*",
                "methods/*"
            ]
        }
    },
    "exclude": [
        "./dist.js",
        "./dist.js.map",
        "./node_modules"
    ],
    "include": [
        "./events",
        "./methods",
        "./*"
    ]
}
